PKG=libxml2
VER=2.9.4
SRC=ftp://ftp.xmlsoft.org/libxml2/libxml2-$VER.tar.gz

build() {    
    ./configure --prefix=$prefix \
                --sysconfdir=$cfgdir \
                --with-threads \
                --with-history \
                --with-icu
    make
    make DESTDIR=$PKG_DIR install
}
