PKG=gst-plugins-base
VER=1.12.2
SRC=http://gstreamer.freedesktop.org/src/$PKG/$PKG-$VER.tar.xz

build() {
    ./configure --prefix=$prefix \
                --host=$CHOST \
                --sysconfdir=$cfgdir \
                --localstatedir=$vardir \
                --disable-static \
                --enable-experimental
    make
    make DESTDIR=$PKG_DIR install
}
