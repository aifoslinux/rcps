PKG=xorg-video-ati
VER=7.10.0
SRC=https://xorg.freedesktop.org/releases/individual/driver/xf86-video-ati-$VER.tar.bz2

build() {
    export LDFLAGS="$LDFLAGS -Wl,-z,lazy"

    ./configure --prefix=$prefix \
                --host=$CHOST \
                --with-glamor
    make
    make DESTDIR=$PKG_DIR install
}
