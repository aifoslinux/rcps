PKG=xorg-evdev
VER=2.10.5
SRC=https://xorg.freedesktop.org/releases/individual/driver/xf86-input-evdev-$VER.tar.bz2

build() {
    autoreconf -fiv
    export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
    ./configure --prefix=$prefix \
                --host=$CHOST \
                --sysconfdir=$cfgdir \
                --localstatedir=$vardir
    make
    make DESTDIR=$PKG_DIR install
}
