PKG=sdl2
VER=2.0.6
SRC=https://www.libsdl.org/release/SDL2-$VER.tar.gz

build() {
    cd $BLD_DIR

    $SRC_DIR/configure --prefix=$prefix \
                       --host=$CHOST \
                       --disable-arts \
                       --disable-esd \
                       --disable-nas \
                       --enable-alsa \
                       --enable-pulseaudio-shared \
                       --enable-video-wayland \
                       --disable-rpath
    make
    make DESTDIR=$PKG_DIR install
}
