PKG=curl
VER=7.56.0
SRC=http://curl.haxx.se/download/$PKG-$VER.tar.gz

build() {
    case $CTARGET in
        *-musl)
            export PATH_SEPARATOR=":"
            ;;
    esac

    ./configure --prefix=$prefix \
                --host=$CHOST \
                --without-libidn \
                --disable-ldap \
                --enable-ipv6 \
                --with-ca-bundle=$cfgdir/ssl/certs/ca-certificates.crt
    make
    make DESTDIR=$PKG_DIR install
}
