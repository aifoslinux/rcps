PKG=extra-cmake-modules
VER=5.38.0
SRC=https://download.kde.org/stable/frameworks/${VER%.*}/$PKG-$VER.tar.xz

build() {
    cd $BLD_DIR

    cmake $SRC_DIR \
        -DCMAKE_INSTALL_PREFIX=$prefix \
        -DCMAKE_BUILD_TYPE=Release \
        -DBUILD_TESTING=OFF \
        -DBUILD_HTML_DOCS=OFF
    make
    make DESTDIR=$PKG_DIR install
}
