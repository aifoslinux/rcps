PKG=libxss
VER=1.2.2
SRC=http://xorg.freedesktop.org/releases/individual/lib/libXScrnSaver-$VER.tar.bz2

build() {
    autoreconf -fiv
    ./configure --prefix=$prefix \
                --host=$CHOST \
                --sysconfdir=$cfgdir \
                --localstatedir=$vardir \
                --disable-static 
    make
    make DESTDIR=$PKG_DIR install
}
