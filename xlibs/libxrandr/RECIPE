PKG=libxrandr
VER=1.5.1
SRC=http://xorg.freedesktop.org/releases/individual/lib/libXrandr-$VER.tar.bz2

build() {
    autoreconf -fiv
    ./configure --prefix=$prefix \
                --host=$CHOST \
                --sysconfdir=$cfgdir \
                --localstatedir=$vardir
    make
    make DESTDIR=$PKG_DIR install
}
