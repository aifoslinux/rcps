PKG=vte
VER=0.48.3
SRC=https://download.gnome.org/sources/$PKG/${VER:0:4}/$PKG-$VER.tar.xz

build() {
    ./configure --prefix=$prefix \
                --host=$CHOST \
                --sysconfdir=$cfgdir \
                --localstatedir=$vardir \
                --libexecdir=$libdir/$PKG \
                --disable-static \
                --enable-introspection
    make
    make DESTDIR=$PKG_DIR install
}
