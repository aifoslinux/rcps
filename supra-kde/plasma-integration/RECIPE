PKG=plasma-integration
VER=5.11.3
SRC=https://download.kde.org/stable/plasma/$VER/$PKG-$VER.tar.xz

build() {
    cd $BLD_DIR

    cmake $SRC_DIR \
        -DCMAKE_INSTALL_PREFIX=$prefix \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_LIBDIR=$libdir \
        -DBUILD_TESTING=OFF
    make
    make DESTDIR=$PKG_DIR install
}
