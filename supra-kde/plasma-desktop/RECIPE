PKG=plasma-desktop
VER=5.11.2
SRC=https://download.kde.org/stable/plasma/$VER/$PKG-$VER.tar.xz

build() {
    cd $BLD_DIR

    cmake $SRC_DIR \
        -DCMAKE_INSTALL_PREFIX=$prefix \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_LIBDIR=$libdir \
        -DCMAKE_INSTALL_LIBEXECDIR=$libdir \
        -DBUILD_TESTING=OFF
    make
    find . -name cmake_install.cmake -exec sed -i -e 's,//share,/share,g' {} +
    #sed -i -e 's,//share,/share,g' kcms/activities/cmake_install.cmake
    #sed -i -e 's,//share,/share,g' kcms/dateandtime/cmake_install.cmake
    #sed -i -e 's,//share,/share,g' kcms/activities/imports/cmake_install.cmake
    make DESTDIR=$PKG_DIR install
}
